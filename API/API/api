index.jsconst express = require('express');
const app = express();

app.use(express.json());
app.use(express.urlencoded({ extended: true }));

app.get('/api/status', (req, res) => {
  res.json({ message: 'VeilMatch Beta API is running on Vercel' });
});

app.get('/', (req, res) => {
  res.send('VeilMatch Beta is live on Vercel!');
});

module.exports = app;
